if (($cpass)) { 
    echo "<p>The following things have been changed:</p><ul>"; 
    if ($cpass) { 
        echo $cpass;	
    } 
    echo "</ul>To close this window, <a href=\"javascript:window.close();\">Close Window</a>.</p>"; 
